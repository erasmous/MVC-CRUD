@model BooksEntity

@{
    ViewData["Title"] = "Add New Book";
}

<h1>Add New Book</h1>
<br>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Index" asp-controller="Book" class="btn btn-primary">Back to List</a>
    </div>
</div>
<br>
<form asp-action="CreateBook" asp-controller="Book" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label asp-for="Title">Book Title</label>
                <input asp-for="Title" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Author">Author Name</label>
                <input asp-for="Author" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="ISBN">ISBN</label>
                <input asp-for="ISBN" class="form-control" required />
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Book</button>
                    <a asp-action="Index" asp-controller="Book" class="btn btn-secondary">Back to List</a>
                </center>
            </div>
        </div>
    </div>
</form>
