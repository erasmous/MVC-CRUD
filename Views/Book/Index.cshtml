@model List<BooksEntity>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>
<br>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Book" class="btn btn-success">Create Book</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>BOOK TITLE</td>
                    <td>AUTHOR NAME</td>
                    <td>ISBN</td>
                    <td>EDIT</td>
                    <td>DELETE</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id"
                                class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id"
                                class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
